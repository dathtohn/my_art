<header>
  <nav class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        
        <a href="#" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        
        <%= link_to "my art", root_path, id: "logo" %>
        
        <div class="nav-collapse collapse pull-right">
          <ul class="nav">
                        
            <% if signed_in? %>
              <li><%= link_to "artists", users_path %></li>
              <li><%= link_to "home", root_path %></li>
              <li id="fat-menu" class="dropdown">
                <%= link_to image_tag(current_user.picture(:thumb), size: "25x25") + current_user.name, current_user, class: "dropdown-toggle", data: { toggle: "dropdown" } %>
                <ul class="dropdown-menu">
                  <li><%= link_to "+ collection", new_user_collection_path(current_user) %></li>
                  <li><%= link_to "account", edit_user_path(current_user) %></li>
                  <li><%= link_to "about my art", about_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to "sign out", signout_path, method: "delete" %></li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to "about", about_path %></li>
              <li><%= link_to "sign in", signin_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>