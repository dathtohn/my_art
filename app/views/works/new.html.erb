<% provide(:title, "New Work") %>
<h1>New Work</h1>

<% @work.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>

<%= form_for([@collection, @work], html: { multipart: true }) do |f| %>

  <%= f.label :title %><br>
  <%= f.text_field :title, placeholder: "New Work" %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description %><br>

  <%= f.file_field :photo %><br>

  <%= f.submit "Add work" %>
<% end %>
