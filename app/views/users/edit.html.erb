<% provide(:title, "Edit account") %> 
<h1>Update your account</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= render 'fields', f: f %>
      <%= f.file_field :picture %>
      <%= f.label :description %>
      <%= f.text_area :description %>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
