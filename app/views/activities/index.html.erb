<div class="span6 offset2">
	<h1>art never stops</h1>
	<% @activities.each do |activity| %>
	  <div class="activity">
	    <%= link_to image_tag(activity.owner.picture(:thumb), size: "30x30"), activity.owner if activity.owner %><%= link_to activity.owner.name, activity.owner if activity.owner %>
	    <%= render_activity activity %>
	  </div>
	<% end %>
</div>